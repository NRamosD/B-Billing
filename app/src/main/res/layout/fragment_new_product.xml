<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/toque"
        android:src="@mipmap/ic_launcher"
        />
    <TextView
        android:gravity="center"
        android:id="@+id/toque"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toque para cambiar la foto"
        android:textSize="6pt"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/join"
        android:fontFamily="@font/fallingsky"/>

    <LinearLayout
        android:id="@+id/join"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"

        >
        <LinearLayout
            android:id="@+id/statejoin_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp"
            >
            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/nombreProducto"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:textColor="@color/black"
                android:background="@drawable/back_edit_text"
                android:textAlignment="center"
                android:hint="Nombre"
                android:inputType="text"
                android:elevation="2dp"
                android:fontFamily="@font/fallingsky"
                android:layout_marginHorizontal="15dp"
                android:layout_weight="1"
                android:layout_marginVertical="5px"
                />
            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/precioProducto"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:textColor="@color/black"
                android:background="@drawable/back_edit_text"
                android:textAlignment="center"
                android:hint="Precio"
                android:inputType="text"
                android:elevation="2dp"
                android:fontFamily="@font/fallingsky"
                android:layout_marginHorizontal="15dp"
                android:layout_weight="1"
                android:layout_marginVertical="5px"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:orientation="horizontal">
            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/stockProduct"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:textColor="@color/black"
                android:background="@drawable/back_edit_text"
                android:textAlignment="center"
                android:hint="Existencias"
                android:inputType="text"
                android:elevation="2dp"
                android:fontFamily="@font/fallingsky"
                android:layout_marginHorizontal="15dp"
                android:layout_weight="1"
                android:layout_marginVertical="5px"
                />
            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/colorProduct"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:textColor="@color/black"
                android:background="@drawable/back_edit_text"
                android:textAlignment="center"
                android:hint="Color"
                android:inputType="text"
                android:elevation="2dp"
                android:fontFamily="@font/fallingsky"
                android:layout_marginHorizontal="15dp"
                android:layout_weight="1"
                android:layout_marginVertical="5px"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:orientation="horizontal">
            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/fElabProducto"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:textColor="@color/black"
                android:background="@drawable/back_edit_text"
                android:textAlignment="center"
                android:hint="F. ElaboraciÃ³n"
                android:inputType="text"
                android:elevation="2dp"
                android:fontFamily="@font/fallingsky"
                android:layout_marginHorizontal="15dp"
                android:layout_weight="1"
                android:layout_marginVertical="5px"
                />
            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/fVenciProducto"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:textColor="@color/black"
                android:background="@drawable/back_edit_text"
                android:textAlignment="center"
                android:hint="F. Vencimiento"
                android:inputType="text"
                android:elevation="2dp"
                android:fontFamily="@font/fallingsky"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5px"
                android:layout_weight="1"
                />
        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/registrarProduct"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:textColor="@color/white"
            android:fontFamily="@font/fallingsky"
            android:layout_margin="5dp"
            android:elevation="10dp"/>

    </LinearLayout>

</RelativeLayout>